// Include all the stuff
@require "stylobate"
$init_wireframe_root = true
@require "stylobate-wireframe"

// Remove or change this if you'd like to use another skin or use full skin names
set-skin-namespace('wireframe')

// Shortcuts to variables
$xs = $wireframe_xs
$s = $wireframe_s
$m = $wireframe_m
$l = $wireframe_l

// Your styles go here

html
  font: 10px/1.5 "Helvetica Neue", Arial, sans-serif
  overflow-y: scroll

body
  font-size: 18px

.is-hidden
  kind: hidden

a
  kind: link underline

@require "blocks/content"
@require "blocks/nav"
@require "blocks/prism"
@require "blocks/code"
@require "blocks/header"
@require "blocks/langs"

